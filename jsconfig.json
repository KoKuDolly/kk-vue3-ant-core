{
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.js", "example/**/*.js"],
  "compilerOptions": {
    "noLib": false,
    "target": "es6",
    "module": "umd",
    "moduleResolution": "node",
    "checkJs": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@example/*": ["./example/*"]
    }
  }
}
